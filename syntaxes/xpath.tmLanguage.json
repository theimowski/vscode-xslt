{
	"scopeName": "source.xpath",
	"name": "xpath",
	"patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#string-literals"
        },
        {
            "include": "#numeric-constants"
        },
        {
            "include": "#variable-references"
        },
        {
            "include": "#function-calls"
        },
        {
            "include": "#axis-steps"
        }
	],
    "repository": {
        "keywords": {
			"match": "\\b(except|intersect|union|div|idiv|mod|to|is|isnot|eq|ne|lt|le|gt|ge|cast as|castable as|treat as|instance of|and|or|if|then|else|some|every|for|return)\\b",
            "name": "keyword.control"
        },
        "operators": {
			"match": "(\\[|\\]|\\||\/|//|-|\\*|\\+|=|!=|<|<=|>|>=|&lt;|&gt;)",
            "name": "keyword.control"
        },
		"string-literals": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xml"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xml"
				}
			},
			"name": "string.quoted.single.xml"
		},
        "numeric-constants": {
            "name": "constant.numeric.decimal.xpath",
            "match": "\\b(-)?([0-9_]+)?(\\.)?[0-9_]+((e|E)[0-9]+)?\\b"
		},
        "variable-references": {
            "name": "variable.other.xpath",
            "match": "\\$\\w+"
        },
        "function-calls": {
            "begin": "((?:\\w+:)?[\\w-]+)\\(",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function.xpath"
                }
            },
            "end": "\\)",
            "patterns": [{ "include": "source.xpath" }]
        },
        "axis-steps": {
            "match": "(([\\w-]+::|@)?(\\w+|\\*)|\\.\\.)",
            "name": "variable.othe.xpath.axis"
        }
	}
}